{
  "manifest_version": 3,
  "name": "LeetCode Problem Scraper",
  "version": "1.0",
  "description": "Scrapes LeetCode problem info and listens for failed submissions.",
  "permissions": ["scripting", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://leetcode.com/problems/*"],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["feedbackListener.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Scraper"
  }
}
