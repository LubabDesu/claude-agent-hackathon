{
  "manifest_version": 3,
  "name": "LeetCode Scraper Pro",
  "version": "1.0",
  "description": "Scrape LeetCode problem data and code periodically.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["https://leetcode.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ]
}
